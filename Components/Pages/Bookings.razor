@page "/bookings"
@using BlazorStatic
@using BlazorStatic.Services
@using BlazorStaticMinimalBlog.Models
@inject BlazorStaticContentService<BookingFrontmatter> bookingService

<div class="mx-auto max-w-6xl py-10 sm:py-16 animate-fade-in">

    @* Header Section *@
    <div class="text-center mb-12">
        <h1 class="text-3xl font-bold tracking-tight text-gray-100 sm:text-5xl mb-4 font-mono">
            <span class="text-red-500">./</span>Bookings
        </h1>
        <p class="text-gray-400 max-w-2xl mx-auto">
            Book appointments for Ren's Courses.
        </p>
        <div class="mt-12 mb-12 w-full h-px bg-gradient-to-r from-transparent via-red-900/50 to-transparent"></div>
    </div>

    @* Empty State *@
    @* TODO: Remove the guard here for next semester. *@
    @if (!bookingService.Posts.Any() || true)
    {
        <div class="text-center text-gray-500 font-mono mt-12 opacity-50">
            @* No active booking calendars found. *@
            Soon.
        </div>
    }
    else
    {
        @* Booking Cards Grid *@
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 px-4">
            @foreach (var item in bookingService.Posts.OrderBy(x => x.FrontMatter.Name))
            {
                var booking = item.FrontMatter;

                <div
                    class="group flex flex-col h-full bg-cardDark border border-borderDark rounded-lg overflow-hidden hover:border-red-500/50 hover:shadow-[0_0_15px_rgba(220,38,38,0.1)] transition-all duration-300">

                    @* Card Content *@
                    <div class="p-6 flex-grow flex flex-col">

                        @* Tags Row *@
                        @if (booking.Tags != null && booking.Tags.Any())
                        {
                            <div class="flex flex-wrap gap-2 mb-3">
                                @foreach (var tag in booking.Tags)
                                {
                                    <span
                                        class="font-mono text-[10px] text-red-400 bg-red-500/10 px-2 py-1 rounded border border-red-500/20">
                                        @tag
                                    </span>
                                }
                            </div>
                        }

                        @* Title *@
                        <h3 class="text-xl font-bold text-gray-100 font-mono mb-3 group-hover:text-red-400 transition-colors">
                            <span
                                class="text-red-500 opacity-50 group-hover:opacity-100 transition-opacity mr-2">#</span>@booking.Name
                        </h3>

                        @* Description *@
                        <p class="text-sm text-gray-400 leading-relaxed font-sans mb-6">
                            @booking.Desc
                        </p>

                        @* Action Button (Pushed to bottom) *@
                        <div class="mt-auto">
                            <a href="@booking.Calendar" target="_blank" rel="noopener noreferrer"
                                class="flex items-center justify-center w-full gap-2 px-4 py-3 rounded border border-borderDark bg-bgDark text-gray-300 font-mono text-sm font-bold hover:bg-red-500 hover:text-white hover:border-red-500 transition-all duration-200 group/btn">
                                <span>Book Now</span>
                                <svg xmlns="http://www.w3.org/2000/svg"
                                    class="h-4 w-4 transition-transform group-hover/btn:translate-x-1" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>