@page "/"
@page "/blog/{fileName}"
@using System.Globalization
@using BlazorStatic
@using BlazorStatic.Services
@using BlazorStaticMinimalBlog.Models
@inject BlazorStaticContentService<CourseFrontMatter> blazorStaticContentService
@inject IJSRuntime JSRuntime

@* No filename -> show latest posts (HOME) *@
@if (string.IsNullOrWhiteSpace(FileName))
{
    <div class="py-10 sm:py-16 text-center">
        <h1
            class="text-3xl font-extrabold tracking-tight text-gray-100 sm:text-6xl mb-6 font-mono relative z-10 break-all max-w-full">
            <span class="text-red-500 animate-pulse">>></span>
            <span class="glitch-target inline-block" data-text="Welcome_Traveler_">Welcome_Traveler</span>
            <span class="animate-pulse">_</span>
        </h1>
        <p class="mt-4 text-lg leading-7 text-gray-400 max-w-2xl mx-auto">
            @WebsiteKeys.BlogLead
        </p>
        <div class="mt-12 mb-12 w-full h-px bg-gradient-to-r from-transparent via-red-900/50 to-transparent"></div>

        <div class="text-left">
            <PostsList />
        </div>
    </div>
    return;
}

@* Show specific post *@
@if (post == null)
{
    <div>404 - Post not found</div>
    return;
}

<article class="mx-auto max-w-4xl animate-fade-in">

    <header class="border-b border-borderDark pb-10 pt-10 text-center">

        @* 1. Tags *@
        <div class="mb-6 flex justify-center gap-2">
            @foreach (var tag in post.FrontMatter.Tags)
            {
                <a href="@blazorStaticContentService.Options.Tags.TagsPageUrl/@tag"
                    class="rounded border border-red-900/50 bg-red-900/10 px-2 py-1 text-xs font-medium text-red-400 hover:bg-red-500 hover:text-white transition-colors uppercase tracking-wider">
                    @tag
                </a>
            }
        </div>

        @* 2. Title *@
        <h1 class="text-3xl font-bold text-gray-100 sm:text-5xl font-mono">@post.FrontMatter.Title</h1>

        @* 3. Subtitle *@
        @if (!string.IsNullOrWhiteSpace(post.FrontMatter.Subtitle))
        {
            <p class="mt-3 text-xl text-gray-400 font-mono">@post.FrontMatter.Subtitle</p>
        }

        @* 4. Metadata Row (Author & Date) *@
        <div class="mt-6 flex flex-wrap items-center justify-center gap-3 text-sm text-gray-400">
            @foreach (var author in post.FrontMatter.Authors)
            {
                @if (!string.IsNullOrWhiteSpace(author.GitHubUserName))
                {
                    <a href="https://github.com/@author.GitHubUserName" target="_blank" rel="noopener noreferrer"
                        class="flex items-center gap-1.5 text-gray-300 hover:text-red-400 transition-colors group">
                        <Svg Icon="Svg.Icons.Github" SizeClasses="w-4 h-4 group-hover:text-red-500" />
                        <span class="font-medium">@author.Name</span>
                    </a>
                }
                else
                {
                    <span class="font-medium text-gray-300">@author.Name</span>
                }
            }

            <span class="text-gray-600 mx-1">•</span>

            <time class="text-gray-500">
                @GetDisplayDateRange(post.FrontMatter)
            </time>
        </div>

        @* 5. Action Row *@
        @if (!string.IsNullOrWhiteSpace(post.FrontMatter.DownloadLink))
        {
            <div class="mt-8 flex justify-center">
                <a href="@post.FrontMatter.DownloadLink" target="_blank" rel="noopener noreferrer"
                    class="group flex items-center gap-2 rounded-full bg-gray-100 px-6 py-2 text-sm font-bold text-bgDark hover:bg-white hover:scale-105 transition-all shadow-lg shadow-white/5">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                        class="w-4 h-4 transition-transform group-hover:translate-y-0.5">
                        <path
                            d="M10.75 2.75a.75.75 0 00-1.5 0v8.614L6.295 8.235a.75.75 0 10-1.09 1.03l4.25 4.5a.75.75 0 001.09 0l4.25-4.5a.75.75 0 00-1.09-1.03l-2.955 3.129V2.75z" />
                        <path
                            d="M3.5 12.75a.75.75 0 00-1.5 0v2.5A2.75 2.75 0 004.75 18h10.5A2.75 2.75 0 0018 15.25v-2.5a.75.75 0 00-1.5 0v2.5c0 .69-.56 1.25-1.25 1.25H4.75c-.69 0-1.25-.56-1.25-1.25v-2.5z" />
                    </svg>
                    Download
                </a>
            </div>
        }

    </header>

    <div class="prose prose-invert prose-red max-w-none py-10">
        @((MarkupString)post.HtmlContent)
    </div>

    <div class="border-t border-borderDark pt-8 pb-12">
        <a href=""
            class="group flex items-center gap-2 text-sm font-medium text-gray-400 hover:text-red-400 transition-colors">
            <span>&larr;</span> Home
        </a>
    </div>

</article>

<script>Prism.highlightAll();</script>

@code {
    [Parameter] public string? FileName { get; set; }
    Post<CourseFrontMatter>? post;

    protected override void OnInitialized()
    {
        if (string.IsNullOrWhiteSpace(FileName)) return;
        post = blazorStaticContentService.Posts.FirstOrDefault(x => x.Url == FileName);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await JSRuntime.InvokeVoidAsync("addCodeFeatures");
    }

    // --- NEW: Date Range Logic ---
    private string GetDisplayDateRange(CourseFrontMatter fm)
    {
        string publishedStr = fm.Published.ToString("MMMM d, yyyy", new CultureInfo("en-US"));

        // 1. If "NoDeadline" is explicitly true, return ONLY published date
        if (fm.NoDeadline)
        {
            return publishedStr;
        }

        DateTime deadlineDate;

        // 2. If Deadline is Explicitly Set -> Use it
        if (fm.Deadline.HasValue)
        {
            deadlineDate = fm.Deadline.Value;
        }
        // 3. If Deadline is Implicit (Missing) -> Add 1 Month to Published Month
        else
        {
            deadlineDate = fm.Published.AddMonths(1);
        }

        string deadlineStr = deadlineDate.ToString("MMMM d, yyyy", new CultureInfo("en-US"));

        // Return Range: "Nov 20, 2025 - Dec 20, 2025"
        return $"{publishedStr} - {deadlineStr}";
    }
}