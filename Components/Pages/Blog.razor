@page "/"
@page "/blog/{fileName}"
@using System.Globalization
@using BlazorStatic
@using BlazorStatic.Services
@inject BlazorStaticContentService<BlogFrontMatter> blazorStaticContentService

@* No filename -> show latest posts (HOME) *@
@if (string.IsNullOrWhiteSpace(FileName))
{
    <div class="py-10 sm:py-16 text-center">
        <h1 class="text-4xl font-extrabold tracking-tight text-gray-100 sm:text-6xl mb-6 font-mono">
            <span class="text-red-500">>></span> Welcome_Traveler<span class="animate-pulse">_</span>
        </h1>
        <p class="mt-4 text-lg leading-7 text-gray-400 max-w-2xl mx-auto">
            @WebsiteKeys.BlogLead
        </p>
        <div class="mt-12 mb-12 w-full h-px bg-gradient-to-r from-transparent via-red-900/50 to-transparent"></div>
        
        <div class="text-left">
            <PostsList />
        </div>
    </div>
    return;
}

@* Show specific post *@
@if (post == null) { <div>404 - Post not found</div> return; }

<article class="mx-auto max-w-4xl animate-fade-in">
    
    <header class="border-b border-borderDark pb-10 text-center pt-10">
        <div class="mb-6 flex justify-center gap-2">
            @foreach (var tag in post.FrontMatter.Tags)
            {
                <a href="@blazorStaticContentService.Options.Tags.TagsPageUrl/@tag" 
                   class="rounded border border-red-900/50 bg-red-900/10 px-2 py-1 text-xs font-medium text-red-400 hover:bg-red-500 hover:text-white transition-colors uppercase tracking-wider">
                    @tag
                </a>
            }
        </div>
        <h1 class="text-3xl font-bold text-gray-100 sm:text-5xl font-mono">@post.FrontMatter.Title</h1>
        
        <div class="mt-6 flex items-center justify-center gap-x-2 text-sm text-gray-400">
            @foreach (var author in post.FrontMatter.Authors)
            {
                 <span class="flex items-center gap-1 text-gray-300">
                     <Svg Icon="Svg.Icons.Github" SizeClasses="w-4 h-4" /> 
                     @author.Name
                 </span>
            }
            <span class="text-gray-600">|</span>
            <time>@post.FrontMatter.Published.ToString("MMMM d, yyyy", new CultureInfo("en-US"))</time>
        </div>
    </header>

    <div class="prose prose-invert prose-red max-w-none py-10">
        @((MarkupString)post.HtmlContent)
    </div>

    <div class="border-t border-borderDark pt-8 pb-12">
        <a href="" class="group flex items-center gap-2 text-sm font-medium text-gray-400 hover:text-red-400 transition-colors">
            <span>&larr;</span> Return to Main
        </a>
    </div>

</article>

<script>Prism.highlightAll();</script>

@code {
    [Parameter] public string? FileName { get; set; }
    Post<BlogFrontMatter>? post;
    protected override void OnInitialized()
    {
        if (string.IsNullOrWhiteSpace(FileName)) return;
        post = blazorStaticContentService.Posts.FirstOrDefault(x => x.Url == FileName);
    }
}