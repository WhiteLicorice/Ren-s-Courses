@page "/"
@page "/articles/{fileName}"
@using System.Globalization
@using BlazorStatic
@using BlazorStatic.Services
@using BlazorStaticMinimalBlog.Models
@using BlazorStaticMinimalBlog.Services
@inject BlazorStaticContentService<CourseFrontMatter> blazorStaticContentService
@inject IJSRuntime JSRuntime
@inject FrontmatterStatusService StatusService

@* --- VIEW 1: HOME PAGE --- *@
@if (string.IsNullOrWhiteSpace(FileName))
{
    <div class="py-10 sm:py-16 text-center">
        <h1
            class="text-3xl font-extrabold tracking-tight text-gray-100 sm:text-6xl mb-6 font-mono relative z-10 break-all max-w-full no-select">
            <span class="text-red-500 animate-pulse">>></span>
            <span class="glitch-target inline-block" data-text="Welcome_Traveler_">Welcome_Traveler</span>
            <span class="animate-pulse">_</span>
        </h1>
        <p class="mt-4 text-lg leading-7 text-gray-400 max-w-2xl mx-auto">
            @WebsiteKeys.BlogLead
        </p>
        <div class="mt-12 mb-12 w-full h-px bg-gradient-to-r from-transparent via-red-900/50 to-transparent"></div>

        <div class="text-left">
            <PostsList />
        </div>
    </div>
    return;
}

@* --- VIEW 2: ARTICLE PAGE --- *@
@if (post == null)
{
    <div class="text-center py-20 text-gray-500 font-mono">404 - Post not found</div>
    return;
}

@* CONTAINER: Full width to allow sidebar to reach edges *@
<div class="w-full px-4 animate-fade-in">

    @* PERFECT CENTER GRID STRATEGY:
       1. Mobile/Tablet/Laptop (< xl): Single centered column. Sidebar hidden.
       2. Desktop (>= xl): 3 Columns. [1fr Spacer] [Content 65ch] [1fr Sidebar].
          This ensures the middle column is DEAD CENTER relative to the viewport.
    *@
    <div class="grid grid-cols-1 xl:grid-cols-[1fr_minmax(auto,65ch)_1fr] gap-8 relative max-w-[1920px] mx-auto">

        @* === LEFT SPACER (Desktop Only) === *@
        @* Keeps the grid symmetric *@
        <div class="hidden xl:block"></div>

        @* === MAIN CONTENT (Center) === *@
        <article class="min-w-0 w-full mx-auto max-w-[65ch]">

            <header class="border-b border-border-dark pb-10 pt-10 text-center">
                @* 1. Tags *@
                <div class="mb-6 flex justify-center gap-2">
                    @foreach (var tag in post.FrontMatter.Tags)
                    {
                        <a href="@blazorStaticContentService.Options.Tags.TagsPageUrl/@tag"
                            class="rounded border border-red-900/50 bg-red-900/10 px-2 py-1 text-xs font-medium text-red-400 hover:bg-red-500 hover:text-white transition-colors uppercase tracking-wider">
                            @tag
                        </a>
                    }
                </div>

                @* 2. Title *@
                <h1 class="text-3xl font-bold text-gray-100 sm:text-5xl font-mono">@post.FrontMatter.Title</h1>

                @* 3. Subtitle *@
                @if (!string.IsNullOrWhiteSpace(post.FrontMatter.Subtitle))
                {
                    <p class="mt-3 text-xl text-gray-400 font-mono">@post.FrontMatter.Subtitle</p>
                }

                @* 4. Metadata *@
                <div class="mt-8 flex flex-col items-center gap-3">
                    <div
                        class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-3 text-sm text-gray-500 font-mono">
                        @foreach (var author in post.FrontMatter.Authors)
                        {
                            @if (!string.IsNullOrWhiteSpace(author.GitHubUserName))
                            {
                                <a href="https://github.com/@author.GitHubUserName" target="_blank" rel="noopener noreferrer"
                                    class="flex flex-col sm:flex-row items-center gap-1 sm:gap-2 text-gray-400 hover:text-red-400 transition-colors group">
                                    <Svg Icon="Svg.Icons.Github"
                                        SizeClasses="w-5 h-5 sm:w-4 sm:h-4 shrink-0 group-hover:text-red-500" />
                                    <span class="font-medium">@(author.Nickname ?? author.Name ??
                                        ArticleAuthor.DEFAULT_NAME)</span>
                                </a>
                            }
                            else
                            {
                                <span class="font-medium text-gray-400">@author.Name</span>
                            }
                        }
                        <span class="hidden sm:inline text-gray-700 mx-1">•</span>
                        <time>@post.FrontMatter.Published.ToString("MMMM d, yyyy", new CultureInfo("en-US"))</time>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(post.FrontMatter.DownloadLink))
                    {
                        <a href="@post.FrontMatter.DownloadLink" target="_blank" rel="noopener noreferrer"
                            class="flex items-center gap-2 text-red-400 hover:text-white transition-colors group text-sm font-medium mt-1">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                class="w-4 h-4 transition-transform group-hover:translate-y-0.5">
                                <path
                                    d="M10.75 2.75a.75.75 0 00-1.5 0v8.614L6.295 8.235a.75.75 0 10-1.09 1.03l4.25 4.5a.75.75 0 001.09 0l4.25-4.5a.75.75 0 00-1.09-1.03l-2.955 3.129V2.75z" />
                                <path
                                    d="M3.5 12.75a.75.75 0 00-1.5 0v2.5A2.75 2.75 0 004.75 18h10.5A2.75 2.75 0 0018 15.25v-2.5a.75.75 0 00-1.5 0v2.5c0 .69-.56 1.25-1.25 1.25H4.75c-.69 0-1.25-.56-1.25-1.25v-2.5z" />
                            </svg>
                            <span class="border-b border-red-400/30 group-hover:border-white pb-0.5">Download</span>
                        </a>
                    }
                </div>
            </header>

            @* === MOBILE TOC (< xl) === *@
            @* We show this on LG screens now to ensure article stays centered *@
            <div class="xl:hidden mt-8 mb-4">
                <details class="group bg-card-dark border border-border-dark rounded-lg overflow-hidden">
                    <summary
                        class="flex items-center justify-between p-4 cursor-pointer list-none text-gray-300 font-mono text-sm font-bold">
                        <span><span class="text-red-500 mr-2">>></span>Table of Contents</span>
                        <svg class="w-4 h-4 transition-transform group-open:rotate-180" fill="none"
                            stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7">
                            </path>
                        </svg>
                    </summary>
                    <div class="p-4 pt-0 border-t border-border-dark/50">
                        <nav id="mobile-toc-content" class="mt-2"></nav>
                    </div>
                </details>
            </div>

            @* CONTENT *@
            <div class="prose prose-invert prose-red max-w-none py-10">
                @((MarkupString)post.HtmlContent)
            </div>

            <div class="border-t border-border-dark pt-8 pb-12">
                <a href=""
                    class="group flex items-center gap-2 text-sm font-medium text-gray-400 hover:text-red-400 transition-colors">
                    <span>&larr;</span> Home
                </a>
            </div>

        </article>

        @* === RIGHT SIDEBAR (Desktop Only >= xl) === *@
        <aside class="hidden xl:block relative">
            <div class="sticky top-8 overflow-y-auto max-h-[calc(100vh-4rem)] pt-10 pl-8">
                @* TOC Container *@
                <nav id="toc-content"></nav>
            </div>
        </aside>

    </div>
</div>

@* === SCROLL TO TOP BUTTON === *@
<button id="scroll-btn" 
        class="fixed bottom-8 right-8 z-50 p-2.5 rounded-full bg-red-600/90 text-white shadow-lg shadow-red-900/40 hover:bg-red-500 hover:scale-110 transition-all duration-300 transform translate-y-4 opacity-0 pointer-events-none backdrop-blur-sm"
        aria-label="Scroll to top">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
        <path fill-rule="evenodd" d="M11.47 2.47a.75.75 0 011.06 0l7.5 7.5a.75.75 0 11-1.06 1.06l-6.22-6.22V21a.75.75 0 01-1.5 0V4.81l-6.22 6.22a.75.75 0 11-1.06-1.06l7.5-7.5z" clip-rule="evenodd" />
    </svg>
</button>

@* Script Triggers *@
<script>Prism.highlightAll();</script>

@code {
    [Parameter] public string? FileName { get; set; }
    Post<CourseFrontMatter>? post;

    protected override void OnInitialized()
    {
        if (string.IsNullOrWhiteSpace(FileName)) return;
        post = blazorStaticContentService.Posts.FirstOrDefault(x => x.Url == FileName);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await JSRuntime.InvokeVoidAsync("addCodeFeatures");
        await JSRuntime.InvokeVoidAsync("generateTOC");
        await JSRuntime.InvokeVoidAsync("initScrollButton");
    }
}