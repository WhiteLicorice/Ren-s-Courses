@using BlazorStatic
@using BlazorStatic.Services
@using BlazorStaticMinimalBlog.Models
@inject BlazorStaticContentService<ProjectFrontMatter> projectService

@* Stack of Foldable Cards *@
<div class="flex flex-col gap-6 px-4">
    @* Use the Parameter passed from the parent *@
    @foreach (var post in Posts)
    {
        var project = post.FrontMatter;
        bool hasThumbnail = !string.IsNullOrWhiteSpace(project.Thumbnail);

        <details
            class="group bg-card-dark border border-border-dark rounded-lg overflow-hidden hover:border-red-500/50 transition-all duration-300">

            @* 1. SUMMARY *@
            <summary
                class="flex items-start justify-between p-6 cursor-pointer hover:bg-white/5 transition-colors select-none list-none marker:hidden">

                <div class="flex flex-col gap-2 flex-grow min-w-0">

                    @* Tags (Top) *@
                    @if (project.Tags != null && project.Tags.Any())
                    {
                        <div class="flex flex-wrap gap-2 mb-1">
                            @foreach (var tag in project.Tags)
                            {
                                @* An anchor tag linking to the project filter *@
                                <a href="projects/@tag" @onclick:stopPropagation
                                    class="font-mono text-xs text-red-400 bg-red-500/10 px-2 py-1 rounded border border-red-500/20 hover:bg-red-500 hover:text-white transition-colors z-20 relative">
                                    @tag
                                </a>
                            }
                        </div>
                    }

                    @* Title *@
                    <h3
                        class="text-xl font-bold text-gray-100 font-mono group-hover:text-red-400 transition-colors leading-tight">
                        <span
                            class="text-red-500 opacity-50 group-open:opacity-100 transition-opacity mr-2">#</span>@project.Title
                    </h3>

                    @* META ROW: Authors (Left) & Batch (Right) *@
                    <div class="flex items-end justify-between gap-4 mt-1">

                        @* Authors (Left) *@
                        <div class="flex flex-wrap gap-2 text-xs font-mono text-gray-500">
                            @foreach (var author in project.GetAuthorObjects())
                            {
                                <span class="flex items-center gap-1 pl-1">
                                    <span class="text-red-500">></span> @author.Name
                                </span>
                            }
                        </div>

                        @* Batch String (Right) *@
                        <div class="flex items-center gap-2 text-[10px] text-gray-600 font-mono shrink-0">
                            <span class="w-1.5 h-1.5 rounded-full bg-gray-700"></span>
                            @project.GetSchoolYear()
                        </div>
                    </div>
                </div>

                @* Chevron *@
                <div
                    class="text-gray-500 transition-transform duration-300 group-open:rotate-180 group-open:text-red-500 ml-4 mt-1 shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </div>
            </summary>

            @* 2. EXPANDED CONTENT *@
            <div class="border-t border-border-dark bg-bg-dark/30 animate-fade-in">
                <div class="grid grid-cols-1 @(hasThumbnail ? "md:grid-cols-3" : "") gap-8 p-6">

                    @* Image Area *@
                    @if (hasThumbnail)
                    {
                        <div class="md:col-span-1">
                            <div
                                class="aspect-video w-full overflow-hidden rounded border border-border-dark relative group/img">
                                <div
                                    class="absolute inset-0 bg-red-900/10 group-hover/img:bg-transparent transition-colors z-10">
                                </div>
                                <img src="@project.Thumbnail" alt="@project.Title"
                                    class="w-full h-full object-cover transform group-hover/img:scale-105 transition-transform duration-500 opacity-80 group-hover/img:opacity-100"
                                    loading="lazy" />
                            </div>
                        </div>
                    }

                    @* Text & Links Area *@
                    <div class="@(hasThumbnail ? "md:col-span-2" : "") flex flex-col h-full">

                        <h4 class="text-xs font-bold uppercase tracking-wider text-gray-500 mb-3 font-mono">Abstract</h4>

                        <p
                            class="text-sm text-gray-300 leading-relaxed pb-6 font-sans text-justify border-l-2 border-red-900/30 pl-4">
                            @project.Abstract
                        </p>

                        @* Links Footer *@
                        <div class="mt-auto flex gap-6 text-sm font-mono pt-4 border-t border-border-dark/50">
                            @if (!string.IsNullOrWhiteSpace(project.Docs))
                            {
                                <a href="@project.Docs" target="_blank" rel="noopener noreferrer"
                                    class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors group/btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 group-hover/btn:text-red-400"
                                        fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                    <span class="hidden sm:inline">Documentation</span>
                                </a>
                            }

                            @if (!string.IsNullOrWhiteSpace(project.Repository))
                            {
                                <a href="@project.Repository" target="_blank" rel="noopener noreferrer"
                                    class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors group/btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 group-hover/btn:text-red-400"
                                        fill="currentColor" viewBox="0 0 24 24">
                                        <path
                                            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                                    </svg>
                                    <span class="hidden sm:inline">Repository</span>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </details>
    }
</div>

@code {
    [Parameter] public IEnumerable<Post<ProjectFrontMatter>> Posts { get; set; } = new List<Post<ProjectFrontMatter>>();
}